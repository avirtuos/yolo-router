{
  "simulation": {
    "seed": 456,
    "duration_ms": 60000,
    "drain_ms": 5000,
    "total_time_ms": 70000
  },
  "traffic": {
    "arrival": {
      "distribution": "poisson",
      "rate_per_sec": 20.0,
      "ramp": {
        "mode": "steps",
        "steps": [
          { "t_ms": 0, "rate_per_sec": 20.0 },
          { "t_ms": 20000, "rate_per_sec": 60.0 },
          { "t_ms": 40000, "rate_per_sec": 120.0 }
        ]
      }
    },
    "request_duration_ms": {
      "mode": "distribution",
      "distribution": "lognormal",
      "mean_ms": 100.0,
      "sigma": 0.5
    },
    "cpu_demand": {
      "mode": "distribution",
      "distribution": "normal",
      "mean": 10.0,
      "stddev": 2.0
    }
  },
  "load_balancer": {
    "architecture": "least_conns",
    "hosts": 3,
    "lc": {
      "retry_delay_ms": 10,
      "shared_map_lock_latency_ms": 0,
      "idle_scale_down_threshold_outstanding_5m": 1
    }
  },
  "targets": {
    "initial_count": 4,
    "max_concurrency_per_target": 8,
    "cpu_capacity_per_target": 100.0
  },
  "scaling": {
    "min_targets": 1,
    "max_targets": 50,
    "scale_up_delay_ms": 200,
    "scale_down_delay_ms": 300
  },
  "sampling": {
    "mode": "event",
    "sample_on": ["lb_decision"]
  },
  "reporting": {
    "output_dir": "reports/least_conns",
    "writers": ["json", "markdown", "html"]
  }
}
