{
  "simulation": {
    "seed": 123,
    "duration_ms": 400000,
    "drain_ms": 5000,
    "total_time_ms": 440000
  },
  "traffic": {
    "arrival": {
      "distribution": "poisson",
      "rate_per_sec": 20.0,
      "ramp": {
        "mode": "linear",
        "start_rate_per_sec": 20.0,
        "end_rate_per_sec": 400.0,
        "ramp_duration_ms": 400000,
        "hold_duration_ms": 20000
      }
    },
    "request_duration_ms": {
      "mode": "distribution",
      "distribution": "lognormal",
      "mean_ms": 100.0,
      "sigma": 0.5
    },
    "cpu_demand": {
      "mode": "distribution",
      "distribution": "normal",
      "mean": 10.0,
      "stddev": 2.0
    }
  },
  "load_balancer": {
    "architecture": "round_robin",
    "hosts": 10,
    "rr": {
      "retry_limit": 2,
      "sync_delay_ms": 100,
      "retry_delay_ms": 10,
      "idle_scale_down_threshold_requests_5m": 2
    }
  },
  "targets": {
    "initial_count": 4,
    "max_concurrency_per_target": 8,
    "cpu_capacity_per_target": 100.0
  },
  "scaling": {
    "min_targets": 1,
    "max_targets": 100,
    "scale_up_delay_ms": 500,
    "scale_down_delay_ms": 300
  },
  "sampling": {
    "mode": "event",
    "sample_on": ["lb_decision"]
  },
  "reporting": {
    "output_dir": "reports/round_robin",
    "writers": ["json", "markdown", "html"]
  }
}
